<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="gradiente_login">
        <item name="android:background">#C4DAEA</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="gradiente_registro">
        <item name="android:background">#C4DAEA</item>
        <item name="android:alpha">0.45</item>
    </style>

    <style name="recuadro_login_registro">
        <item name="android:background">@drawable/recuadro_login_registro</item>
        <item name="android:alpha">0.85</item>
        <item name="android:layout_width">320dp</item>
    </style>

    <style name="campos_login_registro">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/campos_login_registro</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
        <item name="android:fontFamily">@font/segoeui</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="botones_login_registro">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/botones_login_registro</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="gradiente_reserva">
        <item name="android:background">#3CD8FF</item>
        <item name="android:alpha">0.20</item>
    </style>

    <style name="gradiente_miscamas">
        <item name="android:background">#000000</item>
        <item name="android:alpha">0.04</item>
    </style>

    <style name="botones_reserva">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@drawable/botones_reserva</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="fondo_menu_abajo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="linea_menu_abajo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="recuadro_miHospital">
        <item name="android:background">@drawable/cuadradoventanahospital</item>
        <item name="android:alpha">0.85</item>
        <item name="android:layout_width">320dp</item>
    </style>

    <style name="colorgrafico">
        <item name="android:background">@drawable/colorgrafico1</item>
        <item name="android:alpha">0.85</item>
        <item name="android:layout_width">320dp</item>
    </style>

    <style name="colorgrafico2">
        <item name="android:background">@drawable/colorgrafico2</item>
        <item name="android:alpha">0.85</item>
        <item name="android:layout_width">320dp</item>
    </style>

    <style name="colorgrafico3">
        <item name="android:background">@drawable/colorgrafico3</item>
        <item name="android:alpha">0.85</item>
    </style>

    <style name="opacity_pane">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:alpha">0.4</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="titulosMisCamas">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cuadrosMisCamas">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
