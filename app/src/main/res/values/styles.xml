<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#072FF8</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="gradiente_login">
        <item name="android:background">#C4DAEA</item>
        <item name="android:alpha">0.3</item>
    </style>

    <style name="gradiente_registro">
        <item name="android:background">#C4DAEA</item>
        <item name="android:alpha">0.45</item>
    </style>

    <style name="recuadro_login_registro">
        <item name="android:background">@drawable/recuadro_login_registro</item>
        <item name="android:alpha">0.85</item>
    </style>

    <style name="campos_login_registro">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/campos_login_registro</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="botones_login_registro">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/botones_login_registro</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="botones_reserva">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/botones_reserva</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="gradiente_reserva">
        <item name="android:background">#3CD8FF</item>
        <item name="android:alpha">0.20</item>
    </style>

    <style name="recuadro_datos">
        <item name="android:background">@drawable/recuadro_login_registro</item>
        <item name="android:alpha">0.85</item>
    </style>
    <style name="texto_datos">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="texto_datos_normales">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
    </style>
    <style name="campos_datos">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/campos_login_registro</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>
    <style name="botones_datos">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/botones_login_registro</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

</resources>
