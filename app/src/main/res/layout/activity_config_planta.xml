<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigPlanta">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/fondoPlantas"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_config"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        style="@style/gradiente_reserva"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/recuadroConfigPlantas"
        style="@style/recuadro_login_registro"
        android:layout_height="510dp"

        app:layout_constraintBottom_toTopOf="@+id/btnSiguiente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/recuadroConfigPlantas"
        app:layout_constraintEnd_toEndOf="@+id/recuadroConfigPlantas"
        app:layout_constraintStart_toStartOf="@+id/recuadroConfigPlantas"
        app:layout_constraintTop_toTopOf="@+id/recuadroConfigPlantas">

        <EditText
            android:id="@+id/txtNombrePlanta"
            style="@style/campos_login_registro"
            android:layout_marginBottom="30dp"
            android:hint="@string/nombrePlanta"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtNumCamasUCILibres"
            style="@style/campos_login_registro"
            android:hint="@string/numCamasUCILibres"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtNumCamasUCIOcupadas"
            style="@style/campos_login_registro"
            android:layout_marginBottom="32dp"
            android:hint="@string/camasUCIOcupadas"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtNumCamasPlantaLibres"
            style="@style/campos_login_registro"
            android:hint="@string/camasPlantaLibres"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtNumCamasPlantaOcupadas"
            style="@style/campos_login_registro"
            android:layout_marginBottom="32dp"
            android:hint="@string/camasPlantaOcupadas"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtNumCamasUrgenciasLibres"
            style="@style/campos_login_registro"
            android:hint="@string/camasUrgenciasLibres"
            android:inputType="number" />

        <EditText
            android:id="@+id/txtNumCamasUrgenciasOcupadas"
            style="@style/campos_login_registro"
            android:layout_marginBottom="25dp"
            android:hint="@string/camasUrgenciasOcupadas"
            android:inputType="number" />



    </LinearLayout>

    <Button
        android:id="@+id/btnSiguiente"
        style="@style/botones_reserva"
        android:layout_marginBottom="72dp"
        android:text="@string/siguiente"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>